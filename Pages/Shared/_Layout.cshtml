<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SteamCMD Web Server</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-4">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="bi bi-steam me-2"></i>SteamCMD Web Server
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="bi bi-house me-1"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Profiles/Index">
                                <i class="bi bi-list-check me-1"></i> Profiles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/SyncManagement">
                                <i class="bi bi-hourglass-split me-1"></i> Profiles đang chờ xác nhận
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/ClientTracking">
                                <i class="bi bi-people me-1"></i> Client Tracking
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Api">
                                <i class="bi bi-code-slash me-1"></i> API
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container text-center">
            <span>&copy; @DateTime.Now.Year - SteamCMD Web Server</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>